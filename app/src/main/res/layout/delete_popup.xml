<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="15dp"
    android:layout_margin="10dp">



    <TextView
        android:id="@+id/delete_ads_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you want to delete this item?"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="40dp"
        android:textSize="17sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_btn_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel_btn_id"
        app:layout_constraintTop_toBottomOf="@id/delete_ads_txt_id"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:text="Delete"
        android:background="@android:color/holo_purple"/>



    <Button
        android:id="@+id/cancel_btn_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/delete_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="Cancell"
        android:background="@android:color/holo_purple"/>


</androidx.constraintlayout.widget.ConstraintLayout>